---
// src/pages/index.astro
import MainCarousel from '../components/MainCarousel.jsx';
import Layout from '../layouts/Layout.astro'; // Optional: if you have a base layout

// For client:load, ensure Astro loads the React component immediately
// and hydrates it on the client.
---

<Layout title="Our Film Production Company">
  <main>
    <MainCarousel client:load />
  </main>
</Layout>

<style is:global>
  /* Ensure the body and html take up full height for the carousel */
  html, body {
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: hidden; /* Important for full-screen carousel */
  }
  /* Remove default Astro margins if present */
  body {
    background-color: #000; /* Ensure black background initially */
  }
</style>