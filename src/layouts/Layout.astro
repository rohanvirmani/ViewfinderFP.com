---
// This is the "frontmatter" section for your Astro component.
// You can define props, import components, or fetch data here.
import Header from './Header.astro';
import AnnouncementBanner from '../components/AnnouncementBanner.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  url?: string;
  showBanner?: boolean;
}

const { 
  title = 'Viewfinder Film Productions Inc.',
  description = 'Viewfinder Film Productions (VFP) Inc. is a Toronto-based marketing and production company championing diverse creators, especially those of South Asian descent.',
  image = '/images/socialPreview.jpg',
  url = 'https://viewfinderfp.com',
  showBanner = true
} = Astro.props;

// Convert relative image paths to absolute URLs for social sharing
const absoluteImageUrl = image.startsWith('http') 
  ? image 
  : `https://viewfinderfp.com${image}`;

// Calculate padding based on banner visibility
const paddingClass = showBanner 
  ? 'pt-[100px] md:pt-[170px]' // 80px + 20px for mobile, 130px + 20px for desktop
  : 'pt-[80px] md:pt-[130px]';  // Original header heights
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Standard Meta Tags -->
    <meta name="description" content={description} />
    <meta name="theme-color" content="#c2b1d2" />
    
    <!-- Open Graph Meta Tags (Facebook, LinkedIn, WhatsApp, etc.) -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/jpeg" />
    <meta property="og:url" content={url} />
    <meta property="og:site_name" content="Viewfinder Film Productions" />
    
    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteImageUrl} />
    <meta name="twitter:creator" content="@ViewfinderFP" />
    
    <!-- WhatsApp specific meta tags -->
    <meta property="og:image:secure_url" content={absoluteImageUrl} />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    
    <!-- Additional Meta Tags -->
    <meta property="og:locale" content="en_US" />
    <meta name="keywords" content="film production, South Asian cinema, independent films, Toronto filmmakers" />
    <meta name="robots" content="index, follow" />
  </head>
  <body class="bg-[rgba(224,219,219,0.7)] overflow-y-auto">
    <Header/>
    {showBanner && <AnnouncementBanner
      message="ðŸ“£ Dream Warrior Pictures to release VFPâ€™s â€œLittle Wingsâ€!"
      duration={6000}
    />}
    <slot class={paddingClass} />
  </body>
</html>

